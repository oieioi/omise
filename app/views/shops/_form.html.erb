<%= form_for @shop do |f| %>
  <% if @shop.errors.any? %>
    <div id="error_explanation">
      <h2>入力事項にエラーがあります</h2>
      <ul>
      <% @shop.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :name %>: <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %>: <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :url %>: <%= f.text_field :url %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
